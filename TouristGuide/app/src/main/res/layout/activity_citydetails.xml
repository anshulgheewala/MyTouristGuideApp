<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CitydetailsActivity">


    <TextView
    android:id="@+id/mytoutv"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#38B6FF"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:text="My Tourist Guide"
    android:textSize="30dp">

</TextView>



    <androidx.cardview.widget.CardView
        android:id="@+id/btnHotelrooms"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        app:cardElevation="40dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/hotel"
                android:layout_gravity="center"
                android:id="@+id/imgv"
                android:layout_marginLeft="30dp"></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:text="Hotels"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"></TextView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnRestaurant"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        app:cardElevation="40dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"


        android:text="Restaurants" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/restaurent"
                android:layout_gravity="center"
                android:id="@+id/imgv2"
                android:layout_marginLeft="30dp"></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:text="Restaurants"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"></TextView>


        </LinearLayout>








    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnFamousplaces"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        app:cardElevation="40dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/visitin"
                android:layout_gravity="center"
                android:id="@+id/imgv3"
                android:layout_marginLeft="30dp"></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:text="Visiting Places"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"></TextView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

